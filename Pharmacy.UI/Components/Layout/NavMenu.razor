<nav class="flex-column @(Open ? "" : "closed")">
    <div class="nav-item px-3">
        <NavLink class="nav-link" href="products">
            <MudIcon Icon="@Icons.Material.Filled.Inventory" Style="margin-right: 0.75rem;" />
            <span class="nav-text @(Open ? "" : "hidden")">Products</span>
        </NavLink>

        <NavLink class="nav-link mt-1" href="expiring_soon">
            <MudIcon Icon="@Icons.Material.Filled.Timer" Style="margin-right: 0.75rem;" />
            <span class="nav-text @(Open ? "" : "hidden")">Expiring Soon</span>
        </NavLink>
    </div>
</nav>

@code
{
    [Parameter]
    public bool Open {get; set;}

    [Parameter]
    public EventCallback<bool> OpenChanged { get; set; }

    private void ToggleOpen()
    {
        Open = !Open;
        OpenChanged.InvokeAsync(Open);
    }
}
